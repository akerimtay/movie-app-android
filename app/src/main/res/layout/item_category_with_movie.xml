<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="categoryWithMovies"
            type="com.akerimtay.movieapp.data.model.CategoryWithMovies" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/blue_grey_900">

        <TextView
            android:id="@+id/txt_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@{categoryWithMovies.getCategoryName(context)}"
            android:textAllCaps="true"
            android:textColor="@color/white_100"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/popular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movies_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/txt_category_name"
            tools:listitem="@layout/item_movie"
            tools:paddingStart="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>