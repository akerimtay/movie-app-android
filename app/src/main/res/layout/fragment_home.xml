<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.akerimtay.movieapp.ui.home.HomeViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_900">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/indigo_300"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_hello"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="36dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/home_page_hello"
                    android:textColor="@color/white_100"
                    android:textSize="26sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="@dimen/common_margin"
                    android:layout_marginBottom="36dp"
                    android:autofillHints="@string/search"
                    android:background="@drawable/ripple_corners_white_30"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/ic_baseline_search_24_white"
                    android:drawablePadding="@dimen/common_margin"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/search"
                    android:inputType="textAutoComplete|textCapSentences"
                    android:padding="@dimen/small_margin"
                    android:textColorHint="@color/white_60"
                    app:layout_constraintBottom_toTopOf="@id/view_round"
                    app:layout_constraintTop_toBottomOf="@id/txt_hello" />

                <View
                    android:id="@+id/view_round"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_corners_blue_grey_300"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/progress_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/view_header"
                tools:itemCount="3"
                tools:listitem="@layout/item_category_with_movie" />

            <TextView
                android:id="@+id/txt_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/empty_state"
                android:textColor="@color/white_100"
                android:textSize="16sp"
                android:visibility="gone"
                app:drawableTopCompat="@drawable/ic_baseline_not_interested_48_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>