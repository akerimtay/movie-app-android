<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.akerimtay.movieapp.ui.home.HomeViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_900"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/indigo_300">

                <TextView
                    android:id="@+id/txt_hello"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="36dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/home_page_hello"
                    android:textColor="@color/white_100"
                    android:textSize="26sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="@dimen/common_margin"
                    android:layout_marginBottom="36dp"
                    android:autofillHints="@string/search"
                    android:background="@drawable/ripple_corners_white_30"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableStart="@drawable/ic_baseline_search_24_white"
                    android:drawablePadding="@dimen/common_margin"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/search"
                    android:inputType="textAutoComplete|textCapSentences"
                    android:padding="@dimen/small_margin"
                    android:textColorHint="@color/white_60"
                    app:layout_constraintBottom_toTopOf="@id/view_round"
                    app:layout_constraintTop_toBottomOf="@id/txt_hello" />

                <View
                    android:id="@+id/view_round"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/rectangle_corners_blue_grey_300"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>