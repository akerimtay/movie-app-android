<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.akerimtay.movieapp.data.model.Movie" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        tools:background="@color/blue_grey_900">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_poster"
            android:layout_width="@dimen/item_movie_long_width"
            android:layout_height="@dimen/item_movie_long_height"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadW500Image="@{movie.posterPath}"
            app:placeholder="@{@drawable/placeholder_poster}"
            app:riv_corner_radius="@dimen/radius_value"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:layout_marginTop="@dimen/super_small_margin"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semibold"
            android:maxLines="2"
            android:text="@{movie.title}"
            android:textColor="@color/white_100"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/img_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_poster"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/txt_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:drawablePadding="@dimen/super_small_margin"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="@{movie.vote}"
            android:textColor="@color/white_100"
            android:textSize="@dimen/small_text_size"
            app:drawableStartCompat="@drawable/ic_round_star_24_yellow"
            app:layout_constraintLeft_toRightOf="@id/img_poster"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="6.5" />

        <TextView
            android:id="@+id/txt_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:alpha=".7"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:maxLines="3"
            android:text="@{movie.overview}"
            android:textColor="@color/white_100"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintLeft_toRightOf="@id/img_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_vote"
            tools:text="@tools:sample/lorem/random" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>