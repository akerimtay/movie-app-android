<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.akerimtay.movieapp.ui.details.DetailsViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_900"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/big_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".7"
                    android:drawablePadding="@dimen/small_margin"
                    android:fontFamily="@font/open_sans"
                    android:text="@{viewModel.movie.data.getRunTime(context)}"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/medium_text_size"
                    app:drawableStartCompat="@drawable/ic_twotone_access_time_24_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="1ч 30мин" />

                <TextView
                    android:id="@+id/txt_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@{viewModel.movie.data.vote}"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_round_star_24_yellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="6.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_official_page"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/common_margin"
                android:background="@drawable/ripple_corners_white_30"
                android:fontFamily="@font/open_sans"
                android:text="@string/navigate_to_site"
                android:textSize="@dimen/small_text_size"
                android:visibility="@{viewModel.movie.data.homepage.length() > 0}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:alpha=".7"
                android:fontFamily="@font/open_sans"
                android:text="@{viewModel.movie.data.overview}"
                android:textColor="@color/white_100"
                android:textSize="@dimen/medium_text_size"
                tools:maxLines="5"
                tools:text="@tools:sample/lorem/random" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/big_margin"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/studio"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/genres"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/release_date"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:lines="1"
                        android:text="@{viewModel.movie.data.companiesString}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:lines="1"
                        android:text="@{viewModel.movie.data.genresString}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:lines="1"
                        android:text="@{viewModel.movie.data.releaseDateString}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        tools:text="@tools:sample/date/ddmmyy" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>