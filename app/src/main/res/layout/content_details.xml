<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.akerimtay.movieapp.utils.DateUtils" />

        <variable
            name="viewModel"
            type="com.akerimtay.movieapp.ui.details.DetailsViewModel" />

    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_900"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/large_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common_margin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/large_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:drawablePadding="@dimen/small_margin"
                        android:fontFamily="@font/open_sans"
                        android:text="@{viewModel.movie.data.getRunTime(context)}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:drawableStartCompat="@drawable/ic_twotone_access_time_24_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="1ч 30мин" />

                    <TextView
                        android:id="@+id/txt_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="@{viewModel.movie.data.vote}"
                        android:textColor="@color/white_100"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_round_star_24_yellow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="6.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btn_official_page"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginHorizontal="@dimen/large_margin"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@drawable/ripple_corners_white_30"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/navigate_to_site"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="@{viewModel.movie.data.homepage.length() > 0}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/large_margin"
                    android:layout_marginTop="@dimen/common_margin"
                    android:alpha=".7"
                    android:fontFamily="@font/open_sans"
                    android:text="@{viewModel.movie.data.overview}"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/medium_text_size"
                    tools:maxLines="5"
                    tools:text="@tools:sample/lorem/random" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credit_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_margin"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_credit"
                    tools:paddingStart="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/large_margin"
                    android:layout_marginTop="@dimen/large_margin">

                    <TextView
                        android:id="@+id/txt_studio_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/studio"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent=".35" />

                    <TextView
                        android:id="@+id/txt_genres_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/genres"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_studio"
                        app:layout_constraintWidth_percent=".35" />

                    <TextView
                        android:id="@+id/txt_release_date_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/release_date"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_genres"
                        app:layout_constraintWidth_percent=".35" />

                    <TextView
                        android:id="@+id/txt_studio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:maxLines="5"
                        android:text="@{viewModel.movie.data.companiesString}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toRightOf="@id/txt_studio_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@tools:sample/lorem/random" />

                    <TextView
                        android:id="@+id/txt_genres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:maxLines="5"
                        android:text="@{viewModel.movie.data.genresString}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toRightOf="@id/txt_genres_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_genres_title"
                        tools:text="@tools:sample/lorem/random" />

                    <TextView
                        android:id="@+id/txt_release_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:alpha=".7"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:lines="1"
                        android:text="@{DateUtils.getDate(viewModel.movie.data.releaseDate)}"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintLeft_toRightOf="@id/txt_release_date_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_release_date_title"
                        tools:text="@tools:sample/date/ddmmyy" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/view_similar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_margin"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.similarMovies.data.movies.size() > 0}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/large_margin"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/similar"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/large_text_size" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/similar_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_movie"
                        tools:paddingStart="24dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>