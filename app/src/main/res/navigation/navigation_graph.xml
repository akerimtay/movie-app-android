<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.akerimtay.movieapp.ui.home.HomeFragment"
        android:label="@string/home_page_hello"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.akerimtay.movieapp.ui.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="movieId"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.akerimtay.movieapp.ui.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

    </fragment>

</navigation>